*
*::before
*::after
  box-sizing: border-box

*
  font: inherit
  margin: 0
  padding: 0

::-moz-selection
  background-color: #b3d4fc
  color: #000000
  text-shadow: none

::selection
  background-color: #b3d4fc
  color: #000000
  font-size: 62.5%
  height: 100%
  scroll-behavior: smooth
  text-shadow: none

html
html,
body
  min-height: 100%

ul,
ol
  list-style: none

a
  color: inherit
  display: inline-block
  text-decoration: none

svg
  display: inline-block
  max-width: 100%

img,
picture,
video,
canvas
  display: block
  max-width: 100%

button
  background-color: transparent
  border: none
  border-radius: 0
  cursor: pointer

input,
textarea,
select
  color: inherit
  letter-spacing: inherit

p,
h1,
h2,
h3,
h4,
h5,
h6
  overflow-wrap: break-word

body
  -webkit-font-smoothing: antialiased
  font-size: 1.6rem
  line-height: 1.5
  text-rendering: optimizeSpeed
