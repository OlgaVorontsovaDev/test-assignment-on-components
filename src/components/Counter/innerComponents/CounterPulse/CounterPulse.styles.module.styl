@import '../../../../styles/variables/variables.styl';

.pulse
  position: absolute
  height: 100%
  width: 100%
  border-radius: 999px
  pointer-events: none
  animation-name: pulseAnimation
  animation-iteration-count: infinite
  animation-duration: 2s
  opacity: .2
  top: 0
  left: 0

.pulseTwo
  animation-delay: 0.25s

.primary
  background-color: $primary-counter-color

.secondary
  background-color: $secondary-counter-color

.altPrimary
  background-color: $alt-primary-counter-color

.altSecondary
  background-color: $alt-secondary-counter-color

@keyframes pulseAnimation
  0%
    opacity: 0.5
    transform: scale(1)

  50%
    opacity: 0
    transform: scale(3)

  100%
    opacity: 0
    transform: scale(3)
